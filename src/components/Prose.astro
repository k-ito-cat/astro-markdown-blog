---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import "glightbox/dist/css/glightbox.min.css";

type Props = {
  content: AstroComponentFactory;
};
const { content: Content } = Astro.props;
---

<div
  class="prose text-secondary prose-p:mb-4 prose-h2:no-underline prose-h2:mt-8 prose-h3:mt-6 prose-h2:mb-4 prose-h3:text-[20px] prose-h2:text-primary prose-h2:lg:text-heading-second prose-h3:mb-4 prose-ul:pl-6 prose-ul:mb-4 prose-ul:list-disc prose-pre:bg-code prose-pre:p-4 prose-pre:my-4 prose-pre:rounded-md prose-pre:overflow-x-auto prose-code:font-code prose-code:text-[0.9rem] prose-code:text-code prose-a:no-underline prose-a:font-medium prose-a:transition-colors prose-a:duration-300 prose-a:ease-in-out prose-a:text-link prose-a:hover:underline prose-a:hover:text-link-hover prose-strong:text-primary prose-img:w-[80%] prose-img:mx-auto prose-blockquote:text-secondary prose-li:marker:text-secondary prose-code:py-1 prose-code:rounded-b-sm prose-code:bg-code prose-h3:text-primary prose-h3:lg:text-heading-third prose-a:break-words prose-h2:text-[24px] prose-h4:text-primary prose-h2:border-b prose-h2:pb-2 w-full max-w-full"
>
  <Content />
</div>

<script>
  // medium-zoom で画像をLightbox表示
  // @ts-ignore 型定義が無いライブラリのため
  import("glightbox").then(({ default: GLightbox }) => {
    const imgEls = Array.from(document.querySelectorAll(".prose img"));
    if (imgEls.length === 0) return;

    const elements = imgEls.map((img) => ({
      href: (img as HTMLImageElement).src,
      type: "image",
      alt: (img as HTMLImageElement).alt,
    }));

    // @ts-ignore 型定義がないため
    const lightbox = (GLightbox as any)({
      elements,
      touchNavigation: true,
      closeButton: true,
      loop: false,
      slideEffect: "slide",
      cssEasing: "cubic-bezier(0.4,0,0.2,1)",
      speed: 50,
    });

    // 各画像クリックで該当インデックスを開く
    imgEls.forEach((img, idx) => {
      img.addEventListener("click", () => lightbox.openAt(idx));
      (img as HTMLImageElement).style.cursor = "zoom-in";
    });
  });

  // 見出し(h2/h3/h4)をリンク化
  const headingEls = document.querySelectorAll(
    ".prose h2[id], .prose h3[id], .prose h4[id]",
  );
  headingEls.forEach((headingEl) => {
    const id = (headingEl as HTMLElement).id;
    if (!id) return;
    if (headingEl.querySelector("a.heading-self-link")) return;

    const navLink = document.createElement("a");
    navLink.href = `#${id}`;
    navLink.classList.add("heading-self-link");
    // 既存の子要素をリンク内へ移動
    while (headingEl.firstChild) navLink.appendChild(headingEl.firstChild);
    headingEl.appendChild(navLink);
  });
</script>

<style is:global>
  .prose .remark-link-card-plus__container {
    margin: 16px 0;
    width: 100%;
  }

  .prose .remark-link-card-plus__card {
    display: flex;
    align-items: stretch;
    gap: 16px;

    border: 1px solid var(--border-base);
    background: var(--background-color-card);
    border-radius: 12px;
    overflow: hidden;

    text-decoration: none;
    color: inherit;

    transition:
      transform 0.2s ease,
      background-color 0.2s ease,
      border-color 0.2s ease;
  }

  .prose .remark-link-card-plus__card:hover {
    transform: translateY(-1px);
    border-color: var(--color-link);
    background: var(--background-color-card-hover);
  }

  .prose .remark-link-card-plus__main {
    padding: 14px 16px;
    min-width: 0;
    flex: 1;
  }

  .prose .remark-link-card-plus__content {
    min-width: 0;
  }

  .prose .remark-link-card-plus__title {
    font-size: var(--text-content);
    font-weight: 600;
    color: var(--color-link);
    margin: 0 0 6px 0;
    line-height: 1.5;
  }

  .prose .remark-link-card-plus__description {
    font-size: var(--text-small);
    color: var(--color-secondary);
    margin: 0 0 10px 0;
    line-height: 1.7;
  }

  .prose .remark-link-card-plus__meta {
    display: flex;
    align-items: center;
    gap: 8px;

    font-size: var(--text-small);
    color: var(--color-link);
  }

  .prose .remark-link-card-plus__favicon {
    width: 14px;
    height: 14px;
    border-radius: 4px;
    flex: 0 0 auto;
  }

  .prose .remark-link-card-plus__url {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .prose .remark-link-card-plus__thumbnail {
    width: 160px;
    background: var(--background-color-code);
    flex: 0 0 auto;

    position: relative;
    overflow: hidden;
  }

  .prose .remark-link-card-plus__image {
    position: absolute;
    inset: 0;

    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin-block: 0;
  }

  @media (max-width: 640px) {
    .prose .remark-link-card-plus__thumbnail {
      display: none;
    }

    .prose .remark-link-card-plus__container {
      margin: 12px 0;
    }

    .prose .remark-link-card-plus__main {
      padding: 12px 14px;
    }

    .prose .remark-link-card-plus__description {
      margin-bottom: 8px;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .prose .remark-link-card-plus__url {
      max-width: 26ch;
    }
  }

  .prose [data-filename] {
    position: relative;
  }
  .prose [data-filename]::before {
    content: attr(data-filename);
    position: absolute;
    top: -22px;
    left: 0;
    background-color: var(--background-color-code);
    color: var(--text-primary);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
  }
  .prose [data-filename] pre {
    margin-top: 30px;
  }

  .prose pre code {
    color: var(--color-primary);
    background-color: transparent;
    padding-inline: 0;
    margin-inline: 0;
  }
  .prose code {
    margin-inline: 4px;
    padding-inline: 8px;
  }
  .prose pre {
    position: relative;
    overflow-x: auto;
  }

  .prose img {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    max-width: 475px;
    width: 100%;
    height: auto;
    margin-left: inherit;
    cursor: zoom-in;
  }
  .prose img:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  /* コードの前後の擬似要素（コードブロック作成時の 「` `」 これ）を非表示にする */
  .prose code::before,
  .prose code::after {
    content: none;
    display: none;
  }

  .prose .markdown-alert {
    margin: 24px 0;
    padding: 16px 20px;
    border-left: 4px solid;
  }
  .prose .markdown-alert:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  /* NOTE */
  .prose .markdown-alert-note {
    background: var(--background-color-tag);
    border-color: var(--color-note);
    box-shadow: 0 4px 12px rgba(71, 101, 130, 0.15);
  }
  .prose .markdown-alert-note .markdown-alert-title {
    color: var(--color-note-text);
  }
  .prose .markdown-alert-note p {
    color: var(--color-note-text);
  }
  .prose .markdown-alert-note svg {
    color: var(--color-note);
    fill: var(--color-note);
  }
  /* TIP */
  .prose .markdown-alert-tip {
    background: var(--background-color-tag);
    border-color: var(--color-tip);
    box-shadow: 0 4px 12px rgba(0, 168, 107, 0.15);
  }
  .prose .markdown-alert-tip .markdown-alert-title {
    color: var(--color-tip-text);
  }
  .prose .markdown-alert-tip p {
    color: var(--color-tip-text);
  }
  .prose .markdown-alert-tip svg {
    color: var(--color-tip);
    fill: var(--color-tip);
  }
  /* WARNING */
  .prose .markdown-alert-warning {
    background: var(--background-color-tag);
    border-color: var(--color-warning);
    box-shadow: 0 4px 12px rgba(230, 167, 0, 0.15);
  }
  .prose .markdown-alert-warning .markdown-alert-title {
    color: var(--color-warning-text);
  }
  .prose .markdown-alert-warning p {
    color: var(--color-warning-text);
  }
  .prose .markdown-alert-warning svg {
    color: var(--color-warning);
    fill: var(--color-warning);
  }
  /* CAUTION & IMPORTANT */
  .prose .markdown-alert-caution,
  .prose .markdown-alert-important {
    background: var(--background-color-tag);
    border-color: var(--color-danger);
    box-shadow: 0 4px 12px rgba(215, 58, 73, 0.15);
  }
  .prose .markdown-alert-caution .markdown-alert-title,
  .prose .markdown-alert-important .markdown-alert-title {
    color: var(--color-danger-text);
  }
  .prose .markdown-alert-caution p,
  .prose .markdown-alert-important p {
    color: var(--color-danger-text);
  }
  .prose .markdown-alert-caution svg,
  .prose .markdown-alert-important svg {
    color: var(--color-danger);
    fill: var(--color-danger);
  }
  /* タイトル共通スタイル */
  .prose .markdown-alert-title {
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    font-size: 15px;
  }
  /* 本文共通スタイル */
  .prose .markdown-alert p {
    line-height: 1.7;
    margin: 0;
    font-size: 15px;
  }
  /* markdown-alert内のcodeの背景色を無くす */
  .prose .markdown-alert code {
    background-color: transparent;
  }

  /* 見出し自己リンクのスタイル */
  .prose .heading-self-link {
    color: inherit;
    text-decoration: none;
  }
</style>
