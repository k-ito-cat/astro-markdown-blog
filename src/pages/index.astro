---
import { getCollection } from "astro:content";
import { PUBLISHED_STATUS } from "~/constants/publishedStatus";
import BaseLayout from "~/layouts/BaseLayout.astro";
import Card from "~/components/Card.astro";
import { type Category } from "~/constants/categories";
// import Categories from "~/components/Categories.astro";

const category = Astro.url.searchParams.get("category") as Category;

/**
 * 公開または下書きのpostだけを取得
 */
const posts = await getCollection("posts", ({ data }) => {
  if (!category) {
    return data.status !== PUBLISHED_STATUS.PRIVATE;
  } else {
    return (
      data.status !== PUBLISHED_STATUS.PRIVATE &&
      data.categories.includes(category)
    );
  }
});

/**
 * 公開日時が新しい順でソート
 */
const sortedPosts = posts.sort((a, b) => {
  return (
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime()
  );
});
---

<BaseLayout title="記事一覧">
  <div class="mx-auto w-full max-w-[var(--max-width-pc)] px-4 py-6">
    <header class="mb-6">
      <div class="flex flex-col gap-3">
        <div class="flex items-end justify-between gap-4">
          <h1
            class="text-primary text-[24px] font-bold tracking-tight sm:text-[28px]"
          >
            記事一覧
          </h1>
          <span class="text-meta text-small">
            {sortedPosts.length} posts
          </span>
        </div>

        <p class="text-secondary text-small leading-relaxed">
          ほぼ環境改善系の技術メモ。
        </p>

        <div class="flex flex-wrap items-center gap-2 pt-1">
          <a
            href="/"
            aria-current={!category ? "page" : undefined}
            class:list={[
              "text-small rounded-full px-3 py-1 no-underline transition-colors duration-200",
              !category
                ? "text-primary bg-[var(--background-color-tag-hover)]"
                : "text-secondary hover:text-primary bg-[var(--background-color-tag)] hover:bg-[var(--background-color-tag-hover)]",
            ]}
          >
            すべて
          </a>

          <!-- <Categories categories={[...CATEGORIES]} /> -->
        </div>
      </div>
    </header>

    <ul class="grid grid-cols-[repeat(auto-fill,minmax(280px,1fr))] gap-5">
      {
        sortedPosts.map((post) => {
          const { title, publishedAt, categories, thumbnail, status } =
            post.data;

          return (
            <li class="min-w-0">
              <Card
                slug={post.slug}
                title={title}
                publishedAt={publishedAt}
                categories={categories}
                thumbnail={thumbnail}
                status={status}
              />
            </li>
          );
        })
      }
    </ul>
  </div>
</BaseLayout>
